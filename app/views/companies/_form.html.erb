<%= form_for @company, html: {multipart: true}, url: url, method: method do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :classroom_id, "Classroom" %>
  <%= f.collection_select :classroom_id, Classroom.order(id: :desc), :id, :name, {}, {class: "classroom-name"} %>

  <%= f.label :slots, "Number of Internship Slots" %>
  <%= f.number_field :slots %>

  <%= f.label :emails, "Emails (separate with commas)" %>
  <%= f.email_field :emails, value: @company.emails.join(', '), multiple: true %>

  <%= f.submit verb, class: "button" %>

  <%= f.submit "#{verb} and Send Survey", class: "button" %>
<% end %>
